<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_message.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <%= form_for @article, :html => {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :title, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :description, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article Text" %>
        </div>
      </div>
      <div class="form-group col-sm-12">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-large btn-primary" %>
          <%= link_to "Cancel", articles_path, class: "btn btn-large btn-danger" %>
        </div>
      </div>
        
    
    <% end %>

  </div>
</div>