<h1 align="center">Log In to Alpha Blog</h1>

<div class="row">
  <div class="well col-sm-6 col-sm-offset-3">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :email, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "user email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :password, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group col-sm-12">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
          <%= link_to "Cancel", root_path, class: "btn btn-large btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>