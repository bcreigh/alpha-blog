<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @user, :html => {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :username, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :email, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "email@domain.com" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :password, class: "control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
        </div>
      </div>
      <div class="form-group col-sm-12">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-large btn-primary") %>
          <%= link_to "Cancel", articles_path, class: "btn btn-large btn-danger" %>
        </div>
      </div>
        
    
    <% end %>

  </div>