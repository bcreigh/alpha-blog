<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>


<%= form_for @category, :html => {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :name, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category", autofocus: true %>
    </div>
  </div>
  <div class="form-group col-sm-12">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", categories_path, class: "btn btn-large btn-danger" %>
    </div>
  </div>
<% end %>
  